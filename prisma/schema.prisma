generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}





model Usuario {
  id             Int      @id @default(autoincrement())
  nome           String @unique
  dataNascimento DateTime
  email          String   @unique
  senha          String
  tipo           String  
  // livros         Livro[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime? @updatedAt
  deletedAt      DateTime? 
}

model Livro {
  id             Int      @id @default(autoincrement())
  autor          String
  lancamento     DateTime
  tipo           String
  imagem         String? 
  editora        String
  genero         String
  anoEdicao      Int
  numeroEdicao   Int
  preco          Float
  descricao      String
  // usuarioId      Int
  // generoId      Int
  // usuario        Usuario  @relation(fields: [usuarioId], references: [id])
  // genero         Genero   @relation(fields: [generoId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime? @updatedAt
  deletedAt      DateTime? 
}

